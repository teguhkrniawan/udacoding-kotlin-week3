<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2.5dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="@android:color/white">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/item_batik_iv"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:scaleType="centerCrop"
               android:src="@color/colorOrange"/>

           <TextView
               android:id="@+id/item_batik_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@id/item_batik_iv"
               android:paddingTop="10dp"
               android:paddingStart="10dp"
               android:textSize="18sp"
               android:textStyle="bold"
               tools:text="@string/name_batik"
               tools:ignore="RtlSymmetry" />

           <TextView
               android:layout_below="@id/item_batik_name"
               android:id="@+id/item_batik_description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingStart="10dp"
               android:paddingTop="5dp"
               android:maxLines="2"
               android:ellipsize="end"
               android:textAlignment="viewStart"
               android:paddingEnd="10dp"
               android:layout_toEndOf="@id/item_batik_iv"
               tools:text="@string/lorem_ipsum"
               tools:ignore="RtlSymmetry" />

       </RelativeLayout>

    </androidx.cardview.widget.CardView>
    
</LinearLayout>